{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2023",
    "useDefineForClassFields": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "noUnusedLocals": true,
    "resolveJsonModule": false,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
